<Window x:Class="Complex_Practica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Complex_Practica"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowState="Maximized" 
        Title="MainWindow"
        MinHeight="1020" 
        MinWidth="1920">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
             <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="path"
                 Grid.Row="0" Grid.Column="0"
                 materialDesign:HintAssist.Hint="Path"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="0,0,10,10"
                 Height="42"/>

        <Button x:Name="Open_file"
                Grid.Row="0" Grid.Column="1"
                Content="Open File"
                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                Margin="0,0,10,10"
                Height="42"
                Width="120"
                Click="Open_file_Click"/>


        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal" Margin="0,0,0,10">
            <CheckBox Style="{StaticResource MaterialDesignDarkCheckBox}"
                      x:Name="Poryvaev"
                      Content="Poryvaev"
                      Margin="0,0,10,0"/>

            <CheckBox Style="{StaticResource MaterialDesignDarkCheckBox}"
                      x:Name="Krasnukov"
                      Content="krasnukov"
                      Margin="0,0,10,0"/>

            <CheckBox Style="{StaticResource MaterialDesignDarkCheckBox}"
                      x:Name="Sequence"
                      Content="Sequence"
                      Margin="0,0,10,0"/>

            <CheckBox Style="{StaticResource MaterialDesignDarkCheckBox}"
                      x:Name="Proskuryakov"
                      Content="Proskuryakov"
                      Margin="0,0,10,0"/>

            <Button x:Name="to_know"
                    Content="to know"
                    Height="42"
                    VerticalAlignment="Center"
                    Click="to_know_Click"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"/>
        </StackPanel>

        <TextBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                 x:Name="TextSequence"
                 materialDesign:HintAssist.Hint="TextSequence"
                 IsReadOnly="True"
                 Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                 Margin="0,0,0,10"
                 Height="60"/>

        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                     x:Name="TextFile"
                     materialDesign:HintAssist.Hint="TextFile"
                     Style="{StaticResource MaterialDesignFilledTextFieldTextBox}"/>

            <TextBox Grid.Column="2"
                     x:Name="TextInputFile"
                     IsReadOnly="True"
                     materialDesign:HintAssist.Hint="TextInputFile"
                     Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" />
        </Grid>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                Content="Save" 
                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                Margin="0,10,0,0"
                Height="42"
                Click="SaveFile"/>

        <materialDesign:Snackbar 
        Grid.Row="0"
        x:Name="NotificationSnackbar"
        MessageQueue="{materialDesign:MessageQueue}"
        Height="73"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        Width="506"
        Background="{DynamicResource PrimaryHueMidBrush}"
        Foreground="{DynamicResource PrimaryHueMidForegroundBrush}"
        Margin="744,0,0,0" Grid.RowSpan="2">

            <materialDesign:Snackbar.ActionButtonStyle>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="8"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </materialDesign:Snackbar.ActionButtonStyle>
        </materialDesign:Snackbar>

    </Grid>
</Window>