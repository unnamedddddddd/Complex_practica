<Window x:Class="Complex_Practica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Complex_Practica"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" MinHeight="500" MinWidth="800">
    <Grid Margin="0,0,0,-81" Width="1360">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="2" Grid.Row="2" Margin="10" x:Name="CheckBoxs">
            <CheckBox
                    Style="{StaticResource MaterialDesignDarkCheckBox}"
                    x:Name="Poryvaev"
                    Content="Poryvaev"
                    />

            <CheckBox 
                    Style="{StaticResource MaterialDesignDarkCheckBox}"
                    x:Name="Krasnukov"
                    Content="krasnukov"/>

            <CheckBox 
                    Style="{StaticResource MaterialDesignDarkCheckBox}"
                    x:Name="Sequence"
                    x:FieldModifier="public"
                    Content="Sequence"
                    Grid.Column="3"
                    Grid.Row="3"  />

            <CheckBox Margin="0 0 0 16"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Style="{StaticResource MaterialDesignDarkCheckBox}"
                    x:Name="Proskuryakov"
                    Grid.Column="3"
                    Grid.Row="3"
                    Content="Proskuryakov"/>
        </StackPanel>

        <TextBox materialDesign:HintAssist.Hint="TextSequence"
                      Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                      Margin="24,99,374,16"
                      x:Name="TextSequence"/>


        <materialDesign:Snackbar
                x:Name="NotificationSnackbar"
                MessageQueue="{materialDesign:MessageQueue}"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"
                Margin="613,10,-101,120" Grid.ColumnSpan="3"/>

        <Button
                x:Name="Open_file"
                Content="Open File"
                Height="30"
                Width="100"
                Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                Margin="280,114,73,45"    
                Click="Open_file_Click" Grid.Row="1" RenderTransformOrigin="0.715,0.684"/>

        <Button  
                x:Name="to_know"
                Content="to know"
                Height="30"
                VerticalAlignment="Top"
                Margin="280,114,84,0"
                Click="to_know_Click"
                Style="{StaticResource MaterialDesignFlatDarkBgButton}"/>

        <TextBox x:Name="path"
                    materialDesign:HintAssist.Hint="Path"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Margin="24,0,209,45"
                    Width="220"
                    VerticalAlignment="Bottom" Grid.Row="1"/>

    </Grid>
</Window>
